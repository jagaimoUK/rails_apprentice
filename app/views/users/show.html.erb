<div class="profile-page">
  <div class="user-info">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-10 offset-md-1">
          <img src="http://i.imgur.com/Qr71crq.jpg" class="user-img" />
          <h4><%= @user.name %></h4>
          <p>
            Cofounder @GoThinkster, lived in Aol's HQ for a few months, kinda looks like Peeta from
            the Hunger Games
          </p>
          <button class="btn btn-sm btn-outline-secondary action-btn">
            <i class="ion-plus-round"></i>
            &nbsp; Follow Eric Simons
          </button>
          <button class="btn btn-sm btn-outline-secondary action-btn">
            <i class="ion-gear-a"></i>
            &nbsp; Edit Profile Settings
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-10 offset-md-1">
        <div class="articles-toggle">
          <ul class="nav nav-pills outline-active">
            <li class="nav-item">
              <a class="nav-link active" href="">My Articles</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="">Favorited Articles</a>
            </li>
          </ul>
        </div>

        <% @articles.each do |article| %>
          <div class="article-preview">
            <div class="article-meta">
              <%= link_to article do %>
                <img src="http://i.imgur.com/N4VcUeJ.jpg" />
              <% end %>
              <div class="info">
                <%= link_to article, class: "author" do %>
                  <%= article.name %>
                <% end %>
                <span class="date"><%= article.created_at.strftime("%B %dth") %></span>
              </div>
              <button class="btn btn-outline-primary btn-sm pull-xs-right">
                <i class="ion-heart"></i> <%= article.button %>
              </button>
            </div>
            <div class="preview-link">
              <h1><%= article.title %></h1>
              <p><%= article.body %></p>
              <span>Read more...</span>
              <% tags = article.tags.pluck(:name).split(',') %>
              <% tags.each do |tag| %>
                <ul class="tag-list">
                  <li class="tag-default tag-pill tag-outline"><%= tag.join(',') %></li>
                </ul>
              <% end %>
            </div>  
          </div>
        <% end %>

        <ul class="pagination">
          <li class="page-item active">
            <a class="page-link" href="">1</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="">2</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>